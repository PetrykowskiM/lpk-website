.cardWrapper
  display block

.newsCard
  margin 1rem 10%
  display inline-block
  width 80%
  padding 1rem
  font-size 1rem
  /*background-color rgba(244, 238, 227, 0.5)*/

  .cardTitleWrapper
    padding-bottom 1rem

    .cardTitle
      color secondaryColor
      font-weight 500
      font-size 1.3rem

    .cardDate
      float right

  .subtitleWrapper
    padding-bottom 1.2rem

    .cardSubtitle
      color black
      font-weight 500

  .cardImages
    padding-top 0.5rem
    display flex
    padding-bottom 0.5rem

    .newsImage
      height 6rem
      margin-right 1rem
      margin-bottom 1rem

    &:hover
      cursor pointer

.moreWidth
  width 120%

/*Iphone*/
@media only screen  and (min-device-width: 375px)  and (max-device-width : 667px),
                        (min-device-width : 320px)  and (max-device-width : 568px),
                        (min-device-width : 320px)  and (max-device-width : 480px)

  .newsCard
    margin 1rem 7%
    width 100%
    font-size 2.7rem

    .cardTitleWrapper
      padding-bottom 1rem

      .cardTitle
        font-size 3.5rem

    .subtitleWrapper
      padding-bottom 3rem

    .cardImages
      padding-top 1rem
      padding-bottom 1rem

      .newsImage
        height 18rem

