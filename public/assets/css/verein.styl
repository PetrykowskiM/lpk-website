.ziele
  display block

  .zielWrapper
    text-align center
    padding 0.7rem
    display inline-block
    margin 1.5rem

    .zielHead
      margin-top 0
      border-radius 20rem
      background-color secondaryColor
      color white
      display inline-block
      width 3.5rem
      height 3.5rem
      padding 1rem
      font-weight 700

      &.shorter
        line-height 1.7rem

    .zielBody
      padding 1.5rem
      line-height 1.5rem
      font-size 0.9rem

.centerButton
  text-align: center

  

.Divider
  width 80%
  margin 1rem 10%
  text-align center
  font-weight 500
  font-size 3rem
  margin-bottom 3rem
  color black

.boardMembers

  .memberWrapper
    margin-top 2rem

    .memberImageWrapper
      position relative
      .imageCutter
        position absolute
        margin-top -3.25rem
        top 50%
        right 0
        border-radius 20rem
        height 6.5rem
        width 6.5rem
        overflow hidden
        img
          width 7rem

  .information
    padding 1rem
    display block
    line-height 1.5rem

    .memberName
      font-weight 500

    .mail
      padding-top 0.5rem

      a
        text-decoration none
        color black


@media (min-width : 1500px)

  .ziele
    display flex

    .zielWrapper

      .zielHead
        margin-top 1.5rem


/*Iphone*/
@media only screen  and (min-device-width: 375px)  and (max-device-width : 667px),
                        (min-device-width : 320px)  and (max-device-width : 568px),
                        (min-device-width : 320px)  and (max-device-width : 480px)

  .standardButton
    font-size 3rem
    padding 1rem

  .ziele

    .zielWrapper
      padding 0.7rem
      margin 1.5rem

      .zielHead
        margin-top 0
        width 9.5rem
        height 9.5rem
        padding 1rem
        font-size 2.5rem

        &.shorter
          line-height 4.5rem

      .zielBody
        padding 1.5rem
        line-height 4rem
        font-size 2.5rem

  .Divider
    font-size 5rem

  .boardMembers
    font-size 2.5rem

    .memberWrapper
      margin-top 5rem

      .memberImageWrapper
        position relative
        .imageCutter
          margin-top -5.5rem
          top 50%
          right 0
          height 11rem
          width 11rem
          img
            width 11rem

    .information
      padding 1rem
      line-height 4rem

      .memberName
        font-weight 500

      .mail
        padding-top 0.5rem